@model Remedios.Models.Receita

@{
    ViewData["Title"] = "Delete";
}

<div class="my-4">
    <h3>Tem certeza que deseja prosseguir?</h3>
    <div>
        <h4>A ação a seguir deletará permanentemente a receita abaixo</h4>
        <hr />
        <br />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Diagnostico)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Diagnostico)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Medico)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Medico)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Instrucao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Instrucao)
            </dd>
        </dl>

        <form asp-action="Delete" asp-route-UserId="@ViewData["Id"]">
            <input type="hidden" asp-for="Diagnostico" />
            <input type="hidden" asp-for="Instrucao" />
            <input type="hidden" asp-for="Medico" />
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="submit" value="Deletar" class="btn btn-danger" />
            <a class="btn btn-success" asp-action="Index">Cancelar</a>
        </form>
    </div>
</div>

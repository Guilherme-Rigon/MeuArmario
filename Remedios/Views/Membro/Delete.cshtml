@model Remedios.Models.MembroFamilia

@{
    ViewData["Title"] = "Delete";
}
<div class="my-4">
    <h3>Tem certeza que deseja prosseguir?</h3>
    <div>
        <h4>A ação a seguir deletará permanentemente o familiar abaixo</h4>
        <hr />
        <br />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Sobrenome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sobrenome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CPF)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CPF)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nascimento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nascimento)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" name="id" />
            <input type="submit" value="Deletar" class="btn btn-danger" />
            <a class="btn btn-success" asp-action="Index">Cancelar</a>
        </form>
    </div>
</div>
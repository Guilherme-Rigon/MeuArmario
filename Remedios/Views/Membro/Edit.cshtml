@model Remedios.Models.MembroFamilia

@{
    ViewData["Title"] = "Edit";
}

<div style="padding: 20px">
    <form asp-controller="Membro" asp-action="Edit" method="post">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" type="text" class="form-control">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Sobrenome"></label>
            <input asp-for="Sobrenome" type="text" class="form-control">
            <span asp-validation-for="Sobrenome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CPF"></label>
            <input asp-for="CPF" type="text" class="form-control">
            <span asp-validation-for="CPF" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nascimento"></label>
            <input asp-for="Nascimento" type="date" class="form-control">
            <span asp-validation-for="Nascimento" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col">
                    <div class="form-group">
                        <div class="custom-file">
                            <button type="submit" class="btn btn-outline-success btn-block">Salvar</button>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <a asp-controller="Membro" asp-action="Index" class="btn btn-outline-danger btn-block">Voltar</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Remedios.Models.Remedio

@{
    ViewData["Title"] = "Delete";
}

<h3>Tem certeza que deseja prosseguir?</h3>
<div>
    <h4>A ação a seguir deletará permanentemente o remédio abaixo</h4>
    <hr />
    <br />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tarja)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tarja)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Validade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Validade)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-success" asp-action="Index">Cancelar</a>
    </form>
</div>

@model Remedios.Models.Remedio

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <form asp-controller="Remedio" asp-action="Edit" method="post" style="padding: 20px">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" type="text" class="form-control">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Preco"></label>
            <input asp-for="Preco" type="number" class="form-control">
            <span asp-validation-for="Preco" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Quantidade"></label>
            <input asp-for="Quantidade" type="number" class="form-control">
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Tarja"></label>
            <input asp-for="Tarja" class="form-control">
            <span asp-validation-for="Tarja" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Validade"></label>
            <input asp-for="Validade" type="date" class="form-control">
            <span asp-validation-for="Validade" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col">
                    <div class="form-group">
                        <div class="custom-file">
                            <button type="submit" class="btn btn-outline-success btn-block">Salvar</button>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <a asp-controller="Remedio" asp-action="Index" class="btn btn-outline-danger btn-block">Voltar</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

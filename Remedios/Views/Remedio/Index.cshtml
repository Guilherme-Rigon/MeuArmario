@model IEnumerable<Remedios.Models.Remedio>

@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-outline-success btn-block">Cadastrar novo</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Preço</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Tarja</th>
            <th scope="col">Validade</th>
            <th scope="col">Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <th>@item.Nome</th>
            <td>@item.Preco.ToString("F2")</td>
            <td class="@((item.Quantidade <= 0)? "text-danger" : "")">@item.Quantidade</td>
            <td>@item.Tarja</td>
            <td class="@((item.Validade <= DateTime.Now)? "text-danger" : "")">@Html.DisplayFor(x => item.Validade, "{0:dd/MM/yyyy}")</td>
            <td><a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.Id">Editar</a>  <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Deletar</a></td>
        </tr>
        }
    </tbody>
</table>
